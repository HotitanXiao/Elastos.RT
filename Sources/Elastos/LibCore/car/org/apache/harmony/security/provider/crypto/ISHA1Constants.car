module
{
    namespace Org {
    namespace Apache {
    namespace Harmony {
    namespace Security {
    namespace Provider {
    namespace Crypto {

    /**
     * This interface contains : <BR>
     * - a set of constant values, H0-H4, defined in "SECURE HASH STANDARD", FIPS PUB 180-2 ;<BR>
     * - implementation constant values to use in classes using SHA-1 algorithm.    <BR>
     */
    interface ISHA1Constants {
        /**
         *  constant defined in "SECURE HASH STANDARD"
         */
        const Int32 H0 = 0x67452301;


        /**
         *  constant defined in "SECURE HASH STANDARD"
         */
        const Int32 H1 = 0xEFCDAB89;


        /**
         *  constant defined in "SECURE HASH STANDARD"
         */
        const Int32 H2 = 0x98BADCFE;


        /**
         *  constant defined in "SECURE HASH STANDARD"
         */
        const Int32 H3 = 0x10325476;


        /**
         *  constant defined in "SECURE HASH STANDARD"
         */
        const Int32 H4 = 0xC3D2E1F0;


        /**
         * offset in buffer to store number of bytes in 0-15 word frame
         */
        const Int32 BYTES_OFFSET = 81;


        /**
         * offset in buffer to store current hash value
         */
        const Int32 HASH_OFFSET = 82;


        /**
         * # of bytes in H0-H4 words; <BR>
         * in this implementation # is set to 20 (in general # varies from 1 to 20)
         */
        const Int32 DIGEST_LENGTH = 20;
    }

    } // namespace Crypto
    } // namespace Provider
    } // namespace Security
    } // namespace Harmony
    } // namespace Apache
    } // namespace Org
}
